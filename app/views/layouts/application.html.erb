<!DOCTYPE html>
<html>
  <head>
    <title>部活動ポータル</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="flash">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
    <%= render partial: "shared/header" %>
    <%= yield %>
    <%= render partial: "shared/footer" %>
  </body>
</html>
